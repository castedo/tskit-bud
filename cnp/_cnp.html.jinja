{% extends base_template %}
{% set top_link = this.relroot ~ "cnp/" %}

{% block more_head %}
<style>
main > h1 {
  margin-top: 24px; 
  margin-bottom: 24px; 
}
{% include '_pygments.css' %}
code {
  background-color: #f3f3f3;
  padding: 2px 4px;
  border-radius: 4px;
}
code.sourceCode {
  padding: 0;
  border-radius: 0;
}
div.sourceCode {
  background-color: #f3f3f3;
  padding: 4px 12px;
}
div.cnp-home {
  margin-bottom: 24px;
}
dl.cnp-list > dd {
  padding-left: 24px;
}
ul.variants {
  list-style-type: none;
  padding-left: 0;
  display: flex;
  flex-direction: row;
}
ul.variants > li {
  margin-right: 48px;
}
</style>
{% endblock more_head %}

{% block content %}
<div class="cnp-home">
{% if not top %}
<a href="{{top_link}}">Coding Notation Polymorphisms</a><big>&#9668;</big>
{% endif %}
</div>
<h1>{{title}}</h1>
{{pandoc(self.markdown())}}
{% endblock content %}
